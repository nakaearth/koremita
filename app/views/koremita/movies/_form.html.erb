<%= form_for @movie, url: { action: 'create', controller: 'koremita/movies' } do |f| %>
  <%= f.label :title %>:<%= f.text_field :title %><br/>
  <%= f.label :description %>:<%= f.text_area :description, :size => "90x30" %><br/>
  <%= f.label :photo %>
  <%= f.file_field :photo %> （画像用に追加したカラムの名前）

  <%= f.submit %>
<% end %>
